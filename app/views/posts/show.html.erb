<div class="container">
        <div class="user-border">
        <div class="user-and-counts">
        <div class="post-by-user">
        <h2 class="post-title">
         <%= @post.title %> By <%= @post.author.name %>
        </h2>
        </div>
      <div class="post-number">
      <span >
      comments: <%= @post.comments.count %>,
     <span> likes: <%= @post.likes_counter %>
      </span>
    </div>
    </div>
    <p><%= @post.text %></p>
    </div>

    <% if can? :destroy, @post %>
    <%= link_to 'Delete Post', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>

  <div class="comments">
    <% @comments.each do |comment| %>
      <div class="single-comment">
        <span><%= comment.author.name %> : <%= comment.text %></span>
         <% if can? :destroy, comment %>
          <%= link_to 'Delete Comment', post_comment_path(@post, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
         <% end %>
      </div>
    <% end %>
  </div>
  
 <%= link_to "Add Comment", new_user_post_comment_path(@user, @post), class: "button" %>
<%= link_to "Like",  user_post_likes_path(@user, @post), method: :get, class: "button" %>
</div>
</div>