<div class="container">
        <div class="user-border">
        <div class="user-and-counts">
        <div class="post-by-user">
        <h2 class="post-title">
         <%= @post.title %> By <%= @post.author.name %>
        </h2>
        </div>
      <div class="post-number">
      <span >
      comments: <%= @post.comments.count %>,
     <span> likes: <%= @post.likes_counter %>
      </span>
    </div>
    </div>
    <p><%= @post.text %></p>
    </div>

  <div class="comments">
    <% @post.comments.each do |comment| %>
      <div class="single-comment">
        <span><%= comment.author.name %> : <%= comment.text %></span>
      </div>
    <% end %>
  </div>
  
 <%= link_to "Add Comment", new_user_post_comment_path(@user, @post), class: "btn btn-primary m-3" %>
<%= link_to "Like",  user_post_likes_path(@user, @post), method: :get, class: "btn btn-primary" %>
</div>
</div>